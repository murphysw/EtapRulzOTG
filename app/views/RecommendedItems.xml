<Alloy>
	<Tab id="RecommendedItemsTab" title="Recommended Items" icon="KS_nav_ui.png">
		<Window id="RecommendedItemsWindow" title="Recommended Tasks">
			<ListView class="container" id="RecommendedItemsList" defaultItemTemplate="template">
				<SearchBar barColor="#333" />
				<ListSection id="RecommendedItems">
					<ListItem accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_DISCLOSURE"/>
				</ListSection>
				<Templates>
				    <ItemTemplate name="template">
				        <View id="wrapper" class="row">
							<ImageView id="myImage"/>
						</View>
				    </ItemTemplate>
				</Templates>
			</ListView>
		</Window>
	</Tab>
</Alloy>