<Alloy>
    <Model src="Person" instance="true" id="personDetail"/> 
    <!-- dataTransform is not wired up yet, but i hacked it into my code -->
	<Window id="personWindow" class="wrapper" model="$.personDetail" dataTransform="dataTransformation">
		<View id="detailView" class="appView">
			<ImageView id="accountImage" />
			<Label id="nameLabel" text="{$.personDetail.name}" ></Label>
			<Label id="address1Label" text="{$.personDetail.address1}" ></Label>
			<Label id="address2Label" text="{$.personDetail.address2}" ></Label>
			<Label id="phoneLabel" text="{$.personDetail.Phone}" ></Label>
			<Label id="emailLabel" text="{$.personDetail.Email}" ></Label>
			<Button id="saveContactButton"></Button>
		</View>
	</Window>
</Alloy>