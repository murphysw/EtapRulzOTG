<Alloy>
	<Collection src="Person" />
	<Tab id="directoryTab" title="Directory" icon="KS_nav_ui.png">
		<Window id="directoryWindow" title="Directory">
			<ListView class="container" id="directoryList" dataFilter="dofilter" defaultItemTemplate="template">
				<SearchBar barColor="#333" />
				<ListSection id="peopleSection" dataCollection="Person" dataTransform="dataTransform">
					<ListItem name:text="{name}" searchableText="{name}"/>
				</ListSection>
				<Templates>
				    <ItemTemplate name="template">
				        <View id="wrapper" class="row">
							<Label bindId="name" />
						</View>
				    </ItemTemplate>
				</Templates>
			</ListView>
		</Window>
	</Tab>
</Alloy>